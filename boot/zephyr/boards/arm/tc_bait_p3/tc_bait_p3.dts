// LORA
&usart4 {
	current-speed = <9600>;
	pinctrl-0 = <&usart4_pins_a>;
	pinctrl-names = "default";
	status = "ok";
};

&i2c1 {
	status = "ok";
	clock-frequency = <I2C_BITRATE_FAST>;
};


&rtc {
	status = "ok";
};

&flash0 {
	/*
	 * For more information, see:
	 * http://docs.zephyrproject.org/latest/devices/dts/flash_partitions.html
	 */
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		// There are 64 sectors of 4kB
		boot_partition: partition@0 {
			label = "mcuboot";
			reg = <0x00000000 0xC000>; // 12 sectors (48KB)
		};
		slot1_partition: partition@c000 {
			label = "image-1";
			reg = <0x0000C000 0x18000>; // 24 sectors (96KB)
		};
		slot0_partition: partition@24000 {
			label = "image-0";
			reg = <0x00024000 0x18000>; // 24 sectors (96KB)
		};
		scratch_partition: partition@3c000 {
			label = "image-scratch";
			reg = <0x003C000 0x2000>; // 2 sectors (8KB)
		};
		storage_partition: partition@3E000 {
			label = "storage";
			reg = <0x003E000 0x2000>; // 2 sectors (8KB)
		};
	};
};
